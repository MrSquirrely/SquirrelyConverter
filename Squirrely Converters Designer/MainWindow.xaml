<handy:BlurWindow x:Class="Squirrely_Converters_Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:handy="clr-namespace:HandyControl.Controls;assembly=HandyControl"
        xmlns:local="clr-namespace:Squirrely_Converters_Designer"
                  Style="{StaticResource WindowBlur}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <handy:Window.NonClientAreaContent>
        <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
            <Menu>
                <MenuItem Header="Repository">
                    <MenuItem Header="GitHub"/>
                </MenuItem>
            </Menu>
        </StackPanel>
    </handy:Window.NonClientAreaContent>
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="707,379,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</handy:BlurWindow>
