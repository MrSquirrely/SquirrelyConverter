<metro:MetroWindow x:Class="SquirrelyConverter.MainWindow"
                   TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                   Background="{DynamicResource MaterialDesignPaper}"					  
                   GlowBrush="{DynamicResource AccentColorBrush}"					  
                   FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:local="clr-namespace:SquirrelyConverter"
        mc:Ignorable="d"
                   ShowIconOnTitleBar="True"
                   xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   BorderThickness="1"
        Title="WebP Converter" Height="720" Width="1280">
    <Grid>
        <TabControl>
            <!--<dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController/>
            </dragablz:TabablzControl.InterTabController>-->
            <TabItem Header="Encode" HorizontalAlignment="Right" Width="98">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="EncodeItems" AllowDrop="True" Drop="EncodeItems_Drop" Margin="0,0,0,47">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                                <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="80"/>
                                <GridViewColumn Header="Saved" DisplayMemberBinding="{Binding Saved}" Width="100"/>
                                <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}" Width="794"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="WebPEncodeButton" Content="Encode" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="80" Click="EncodeButton_Click" />
                </Grid>
            </TabItem>
            <TabItem Header="Decode" HorizontalAlignment="Right" Width="98">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="DecodeItems" AllowDrop="True" Drop="DecodeItems_Drop" Margin="0,0,0,47">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                                <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="80"/>
                                <GridViewColumn Header="Saved" DisplayMemberBinding="{Binding Saved}" Width="100"/>
                                <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}" Width="794"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="WebPDecodeButton" Content="Encode" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="80" Click="DecodeButton_Click" />
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="OutputTextbox" HorizontalAlignment="Left" Height="24" Margin="10,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" ToolTip="The folder location"/>
                    <CheckBox x:Name="ChangeOutput" Content="Change Output Directory?" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" ToolTip="Do you want to change the output directory?"/>
                    <Button x:Name="OpenFolderButton" Content="Open Folder" HorizontalAlignment="Left" Margin="495,49,0,0" VerticalAlignment="Top" Width="120" Click="OpenFolderButton_Click" ToolTip="Opens a dialog so you can open the folder you wish to use."/>
                    <CheckBox x:Name="AutoDelete" Content="Auto Delete Temp Directory When Finished?" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" ToolTip="Do you want to delete the &quot;temp&quot; folder when the encoding process is finished?"/>
                    <Slider x:Name="WebPQuality" HorizontalAlignment="Left" Margin="63,145,0,0" VerticalAlignment="Top" Height="20" Width="566" Maximum="100" Minimum="1" Value="80" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft" SmallChange="1" ToolTip="Specify the compression factor for RGB channels between 0 and 100. The default is 80."/>
                    <Label Content="Quality" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" ToolTip="Sets the quality (Default is 80)"/>
                    <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="554,204,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click" IsEnabled="False" ToolTip="Save settings."/>
                    <Label Content="Default Settings" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" ToolTip="These are the settings for the program."/>
                    <CheckBox x:Name="WebPLossless" Content="Lossless" HorizontalAlignment="Left" Margin="10,174,0,0" VerticalAlignment="Top" ToolTip="Encode the image without any loss."/>
                    <GridSplitter HorizontalAlignment="Left" Height="2" Margin="10,109,0,0" VerticalAlignment="Top" Width="619"/>
                    <Button Content="Cancel" HorizontalAlignment="Left" Margin="474,204,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" ToolTip="Cancel any changes you might have made."/>
                    <Button Content="Reset" HorizontalAlignment="Left" Margin="394,204,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" ToolTip="Reset all settings back to default."/>
                    <Label Content="WebP Settings. Hover over for tooltip." HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" ToolTip="Just like that! These are the settings for the WebP conversion" FontWeight="Bold" FontStyle="Italic"/>
                    <CheckBox x:Name="WebPNoAlpha" Content="No Alpha" HorizontalAlignment="Left" Margin="79,174,0,0" VerticalAlignment="Top" ToolTip="Using this option will discard the alpha channel."/>
                    <CheckBox x:Name="WebPCopyMeta" Content="Copy Metadata" HorizontalAlignment="Left" Margin="156,174,0,0" VerticalAlignment="Top" ToolTip="A comma separated list of metadata to copy from the input to the output if present. Valid values: all, none, exif, icc, xmp."/>
                    <GridSplitter HorizontalAlignment="Left" Height="2" Margin="10,197,0,0" VerticalAlignment="Top" Width="619"/>
                    <TextBlock HorizontalAlignment="Left" Margin="1014,10,0,0" TextWrapping="Wrap" Text="At the moment changing the output directory doesn't do anything. I am working on getting it to work." VerticalAlignment="Top" Height="54" Width="240"/>
                </Grid>
            </TabItem>
        </TabControl>
        

    </Grid>
</metro:MetroWindow>
