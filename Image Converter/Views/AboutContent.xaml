<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Image_Converter.Views"
             x:Class="Image_Converter.Views.AboutContent"
             mc:Ignorable="d" 
             Width="390" Height="580">
    <Grid>
        <Label Content="Image Convert is an easy to use image conversion utility" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button Name="FinishedSoundButton" Content="Finished sound is CC0 by Kenny" Style="{DynamicResource MaterialDesignToolButton}" Margin="10,41,10,0" VerticalAlignment="Top" Click="FinishedSoundButton_Click"/>
        <Image Height="220" Margin="10,78,10,0" VerticalAlignment="Top" Source="/Image Converter;component/icon.ico"/>
        <Label Content="Icon is CC0 by Kenny" Margin="10,303,10,0" VerticalAlignment="Top"/>
        <Button Name="KennyLinkButton" Content="Link to Kenny" HorizontalAlignment="Left" Margin="10,334,0,0" VerticalAlignment="Top" Width="140" Click="KennyLinkButton_Click"/>
    </Grid>
</UserControl>
