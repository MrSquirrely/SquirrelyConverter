<metro:MetroWindow x:Class="Mr_Squirrely_Converters.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mr_Squirrely_Converters.Views"
        mc:Ignorable="d"
                   ShowMaxRestoreButton="False"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
                   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="About" Height="450" Width="800" Loaded="OnLoad">
    <FrameworkElement.CommandBindings>
        <CommandBinding Command="{x:Static markdig:Commands.Hyperlink}" Executed="OpenHyperlink" />
    </FrameworkElement.CommandBindings>
    <Grid>
        <FlowDocumentScrollViewer x:Name="Viewer"/>
    </Grid>
</metro:MetroWindow>
